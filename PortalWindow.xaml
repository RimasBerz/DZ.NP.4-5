<Window x:Class="Http.PortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Http"
        mc:Ignorable="d"
        Title="PortalWindow" Height="450" Width="300">
    <StackPanel>
        <Label Content="Сетевое программирование" 
               HorizontalAlignment="Center"
               FontSize="20" FontWeight="DemiBold"/>
        <Button x:Name="ChatServer" Content="1. Сервер чата"
                FontSize="18" Margin="10 10 30 10"
                Click="ChatServer_Click"/>
        <Button x:Name="ChatClient" Content="2. Клиент чата"
                FontSize="18" Margin="10 10 30 10"
                Click="ChatClient_Click"/>
        <Button x:Name="HttpRequests" Content="3. HttpClient"
                FontSize="18" Margin="10 10 30 10"
                Click="HttpClient_Click"/>
        <Button x:Name="ApiRequests" Content="4. Api"
                FontSize="18" Margin="10 10 30 10"
                Click="Apirequest_Click"/>
    </StackPanel>
</Window>
